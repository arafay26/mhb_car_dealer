            <field name="model">car.inspection</field>
            <field name="arch" type="xml">
                <form>
                    <header>
<!--&lt;!&ndash;                        <button string="Confirmed" class="oe_stat_button" type="object" name="confirmed" attrs="{'invisible': [('state', '!=','Draft')]}"/>&ndash;&gt;-->

